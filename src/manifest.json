{
    "manifest_version": 3,
    "name": "Smart Gmail Writer",
    "version": "1.0",
    "description": "Write email replies using AI inside Gmail.",
    "permissions": ["storage"],
    "host_permissions": ["https://mail.google.com/*", "https://api.openai.com/*"],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [{
        "matches": ["https://mail.google.com/*"],
        "js": ["https://www.inboxsdk.com/build/inbox-sdk.js", "content.js"],
        "run_at": "document_end"
    }]
}
